{
  "name": "@s-ui/theme",
  "version": "8.96.0",
  "description": "Generic theme to add styles to all SUI components",
  "main": "lib/index.scss",
  "scripts": {
    "co": "sui-mono commit",
    "lib": "cpx \"./src/**/*.scss\" lib/",
    "lint": "sui-lint sass",
    "phoenix": "npx -p @s-ui/mono@1 sui-mono phoenix",
    "phoenix:ci": "npx -p @s-ui/mono@1 sui-mono phoenix --ci",
    "prepare": "npm run lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SUI-Components/sui-theme.git"
  },
  "keywords": [
    "sass",
    "theme",
    "basic"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SUI-Components/sui-theme/issues"
  },
  "homepage": "https://github.com/SUI-Components/sui-theme#readme",
  "devDependencies": {
    "@s-ui/lint": "3",
    "@s-ui/mono": "1",
    "@s-ui/precommit": "2",
    "cpx": "1.5.0",
    "husky": "4.3.0",
    "rimraf": "3.0.2",
    "validate-commit-msg": "2.14.0"
  },
  "config": {
    "sui-mono": {
      "access": "public"
    },
    "validate-commit-msg": {
      "types": "@s-ui/mono/src/types"
    }
  },
  "stylelint": {
    "extends": "./node_modules/@s-ui/lint/stylelint.config.js"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@s-ui/lint/eslintrc.js"
    ]
  },
  "prettier": "./node_modules/@s-ui/lint/.prettierrc.js",
  "husky": {
    "hooks": {
      "pre-commit": "sui-precommit run"
    }
  }
}
